<odoo>
  <data>
    <record model="ir.ui.view" id="customer_pricelist_list">
      <field name="name">customer_pricelist list</field>
      <field name="model">customer.pricelist</field>
      <field name="arch" type="xml">
        <tree>
          <field name="reference" colspan="2"/>
          <field name="partner_id" />
          <field name="date" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="customer_pricelist_form">
        <field name="name">customer.pricelist</field>
        <field name="model">customer.pricelist</field>
        <field name="arch" type="xml">
            <form string="TEST">
                <header>
                    <button name="action_confirm" string="Confirm" class="oe_highlight" type="object" groups="base.group_user"/>
                    <button name="action_send" string="Send by email" type="object" groups="base.group_user"/>
                    <button name="action_approve" string="Approve" type="object" groups="base.group_user"/>
                    <button name="action_cancel" string="Cancel" type="object" groups="base.group_user"/>

                    <field name="state" 
                        widget="statusbar"
                        statusbar_visible="draft,sent,signed,approved" readony="1"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="reference" default_focus="1" placeholder="Reference" required="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="company_id" groups="base.group_no_one"/>
                            <field name="currency_id" invisible="1" />
                            <field name="partner_id" required="1" />
                            <field name="margin" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" nolabel="1" widget="section_and_note_one2many" mode="tree,kanban">
                                <tree editable="bottom">
                                    <control>
                                        <create name="create" string="Add a pricelist item"/>
                                    </control>

                                    <field name="pricelist_id" invisible="1" />
                                    <field name="currency_id" invisible="1" />
                                    <field name="style" />
                                    <field name="color_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                                    <field name="size_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                                    <field name="clothing_type_id" />
                                    <button name="action_open_embellishment_wizard" width="0.1" icon="fa-paint-brush" type="object" style="color:#006D6B" string="To edit embellishment save order first" help="To edit embellishment save order first" />
                                    <field name="is_personalizable" colspan="2"/>
                                    <field name="cost" />
                                    <field name="margin" />
                                    <field name="sale_price" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"
                        groups="base.group_user" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
        </record>

    <record model="ir.actions.act_window" id="customer_pricelist_action">
      <field name="name">Customer Pricelist</field>
      <field name="res_model">customer.pricelist</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>