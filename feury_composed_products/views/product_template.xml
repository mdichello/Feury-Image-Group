<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form view -->
    <record id="product_template_only_form_view_composed_products_inherit" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//div[@name='options']" position="after">
                <div name="composite_options" groups="base.group_user">
                    <div>
                        <field name="is_composite_product" />
                        <label for="is_composite_product"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <!-- Composition of product with others-->
                <page string="Composition Information" name="composite_line_ids" attrs="{'invisible': [('is_composite_product', '=', False)]}">
                    <group>
                        <field name="deployment" />
                    </group>
                    <field name="composite_line_ids">
                        <tree editable="bottom">
                            <field name="product_tmpl_id" invisible="1" force_save="1" />
                            <field name="product_id" options="{'no_open': True, 'no_create': True}" />
                            <field name="quantity" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
