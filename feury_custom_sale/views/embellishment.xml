<odoo>
  <data>
    <record model="ir.ui.view" id="embellishment_form">
        <field name="name">embellishment</field>
        <field name="model">embellishment</field>
        <field name="arch" type="xml">
            <form string="embellishment">
                <group>
                    <group>
                        <field name="sale_order_line_id" invisible="1"/>
                        <field name="clothing_type" />
                        <field name="type" />
                        <!-- TODO invisible for everything except sew stripe -->
                        <field name="hem_length" attrs="{'invisible': [('type', '!=', 'hem_pants')]}"/>
                    </group>
                    <group string="Material" attrs="{'invisible': [('type', 'in', ('hem_pants', 'embroider', '', False))]}">
                        <field string="Color" name="material_color_id" />
                        <field string="Type" name="material_type_id" />
                        <field string="Size" name="material_size_id" />
                    </group>
                </group>

                <field name="line_ids" context="{'default_clothing_type': clothing_type}">
                    <tree editable="bottom" class="embellishment_tree">
                        <control>
                            <create name="create" string="Add a Line"/>
                        </control>

                        <field name="is_other_location" invisible="1"/>
                        <field name="clothing_type" invisible="1" />
                        <field name="location" invisible="1" />

                        <field string="Location" name="pant_location" invisible="not context.get('is_pant', False)"/>
                        <field string="Location" name="hat_location" invisible="not context.get('is_hat', False)"/>
                        <field string="Location" name="apron_location" invisible="not context.get('is_apron', False)"/>
                        <field string="Location" name="coverall_location" invisible="not context.get('is_coverall', False)"/>
                        <field string="Location" name="top_location" invisible="not context.get('is_top', False)"/>
                        <field string="Location" name="other_location" invisible="not context.get('is_other', False)"/>
                        <field name="other_location_name" attrs="{'required': [('location', '=', 'other')]}" />

                        <field name="artwork_id" domain="['|', ('partner_id', '=', context.get('partner_id')), ('partner_id', '=', False)]"/>
                        <field name="text" widget="section_and_note_text" optional="show" colspan="2" />
                        <field name="thumbnail" nolabel="1" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;thumbnail&quot;}" attrs="{ 'invisible' : [('thumbnail', '=', False)]}"/>
                        <field name="description" widget="section_and_note_text" optional="show" colspan="2" />
                    </tree>
                    <form>
                        <group>
                            <field name="is_other_location" />
                            <field name="clothing_type" />

                            <field name="other_location" attrs="{'invisible': [('is_other_location', '=', False)]}" />
                            <field name="pant_location" attrs="{'invisible': [('clothing_type', '=', 'pant')]}" />
                            <field name="top_location" attrs="{'invisible': [('clothing_type', '=', 'top')]}" />
                            <field name="hat_location" attrs="{'invisible': [('clothing_type', '=', 'hat')]}" />
                            <field name="coverall_location" attrs="{'invisible': [('clothing_type', '=', 'coverall')]}" />
                            <field name="apron_location" attrs="{'invisible': [('clothing_type', '=', 'apron')]}" />

                            <field name="artwork_id" />
                            <field name="description" widget="section_and_note_text" optional="show"/>
                        </group>
                    </form>
                </field>

                <footer>
                    <button name="action_save" string="Save" type="object" class="btn-primary" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="embellishment_action">
      <field name="name">embellishment</field>
      <field name="res_model">embellishment</field>
      <field name="view_mode">form</field>
    </record>
  </data>
</odoo>
